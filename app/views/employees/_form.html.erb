      <h6><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h6>
      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, class:"form-label" %>
    <%= f.text_field :name, class:"form-control" %>
